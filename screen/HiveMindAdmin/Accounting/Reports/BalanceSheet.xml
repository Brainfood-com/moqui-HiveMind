<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.5.xsd"
        default-menu-include="false">

    <parameter name="organizationPartyId" required="true"/>
    <parameter name="timePeriodIdList"/>

    <actions>
        <if condition="timePeriodIdList instanceof String"><set field="timePeriodIdList" from="[timePeriodIdList]"/></if>
        <service-call name="mantle.ledger.LedgerReportServices.run#BalanceSheet" out-map="context" in-map="context"/>
    </actions>
    <widgets>
        <render-mode>
            <text type="html" location="component://mantle-usl/template/ledger/BalanceSheet.html.ftl"
                    template="true" encode="false" no-boundary-comment="true"/>
        </render-mode>
    </widgets>
</screen>
